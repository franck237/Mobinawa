<section class="slice-lg masthead">
    <!-- Mask overlay -->


    <!-- Container -->
    <div class="container text-center">
        <div class="row">
            <div class="col-md-12">
                <div class="fluid-paragraph paragraph-md">
                    <div><%= flash[:alert] %></div>
                    <!-- Left aligned Mobinawa icon -->
                    <div class="icon-block icon-block--style-1-v1">
                        <div class="block-icon">
                            <%= image_pack_tag "logo/mobinawa_small.png", alt: "My Logo", width: 75, height: 75 %>
                        </div>
                        <div class="block-content" style="text-align: left; margin-left: 15px">
                             <h2 class="heading heading-1 strong-400 text-white" style="margin-bottom: 0">
                                Hello,
                            </h2>
                            <h3 class="heading heading-3 strong-400 text-white">What are you searching for ?</h3>
                        </div>
                    </div>

                    <!-- Search bar real (Added after)
                    <%= form_tag(search_companies_path, :method => "get", class: 'navbar-form navbar-left') do %>  
                        <div class="input-group">
                              <%= search_field_tag :search, params[:search], placeholder: "Enter the name of the company here", class: "form-control" %>
                              <div class="input-group-btn">
                                <%= button_tag "", :class => 'btn btn-info fas fa-search',:name => nil%>
                              </div>
                        </div>
                     <% end %>  -->

                    <!-- Search bar modifiÃ© (sans boomerang) -->
                <%= form_tag(search_companies_path, :method => "get", class: 'p-1 bg-light rounded shadow-sm mb-4', style: 'width:100%; margin: auto') do %>  <!-- En rajoutant rounded-pill apres rounded, ajoute un meilleur effet mais un petit probleme visuel (peut etre a deplacer dans le search field tag egalement) -->
                    <div class="input-group">
                        <div class="input-group">
                          <%= search_field_tag :search, params[:search], placeholder: "Enter the name of the company here", class: "form-control border-0 bg-light" %>
                          <div class="input-group-append">
                            <button type="submit" class="btn btn-link text-primary"><i class="fas fa-search"></i></button> <!--Normalement utiliser celle du haut avec boomerang -->
                          </div>
                        </div>
                    </div>
                <% end %>
                    <br>
            </div>
        </div>
    </div>
    <br>

        <!-- Boucle Index Categories -->
        <div class="row text-white">
            <% @sectors.each.with_index(1) do |sector| %>
            <div class="col-lg-3 col-md-4 text-white">
                    <div class="block-icon text-white">
                    <%= link_to image_pack_tag(sector.icon, width: 60, height: 60), sector_path(sector.id) %>
                    </div>
                    <div class="block-content">
                    <h3 class="heading heading-6 strong-600"><%= link_to (sector.name), sector_path(sector.id), class: "text-white" %></h3>
                    <br>
                    </div>
            </div>
            <% end %>
        </div>
    </div>
</section> 