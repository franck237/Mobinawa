<!DOCTYPE html>
<html>
  <head>
    <title>Mobinawa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- CSS Fancybox -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css">
  </head>

  <body>
   <!-- Ajout d'une NavBar bootstrap-->
            <!-- Header -->
            <div class="st-content">
                <div class="st-content-inner">                
                  <div class="header">
                    <!-- Navbar -->
                    <nav class="navbar navbar-expand-lg navbar--bold navbar--style-2 navbar-light bg-default  navbar--bb-1px">
                      <div class="container navbar-container">
                        <!-- Brand/Logo -->
                        <%= link_to image_pack_tag("logo/mobinawa.png", width: 100), country_sectors_path(:country_id => Country.first.id), class: "navbar-brand" %>

                        <div class="d-inline-block">
                          <!-- Navbar toggler  -->
                          <button class="navbar-toggler hamburger hamburger-js hamburger--spring" type="button" data-toggle="collapse" data-target="#navbar_main" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                          <span class="hamburger-box">
                          <span class="hamburger-inner"></span>
                          </span>
                          </button>
                        </div>
                        <div class="collapse navbar-collapse align-items-center justify-content-center" id="navbar_main">                   
                          <!-- Navbar links -->
                          <ul class="navbar-nav">
                              <li class="nav-item dropdown megamenu">
                                  <%= link_to 'Home', homes_index_path, class: "nav-link btn mr-1"  %>
                              </li>                            
                              <li class="nav-item dropdown megamenu">
                                  <% if !current_admin%>
                                  <% else %>
                                  <%= link_to 'New Company', new_admin_company_path(current_admin.id), class: "nav-link btn mr-1"  %>
                                  <% end %>
                              </li>
                          </ul>
                          <ul class="navbar-nav ml-lg-auto">
                              <% if !current_admin%>
                         <!--     <li class="nav-item ">    Car probleme d'affichage lors du collapse -->                        
                                <%=link_to 'SignIn', new_admin_session_path, class: "btn btn-outline-primary mr-1 ml-1" %>
                              </li>
                              <li class="nav-item ">  
                              <%= link_to 'SignUp',new_admin_registration_path, class: "btn btn-outline-primary mr-1 ml-1" %>
                              </li>
                              <% else %>
                         <!--     <li class="nav-item ">     -->
                              <%= link_to 'My Profile',admin_path(current_admin.id), class: "nav-link btn btn-outline-primary mr-1" %>
                              </li>
                              <li class="nav-item ">
                              <%= link_to 'SignOut',destroy_admin_session_path, method: :delete, data: {confirm: 'Êtes-vous sûr de vous déconnecter ?'}, class: "nav-link btn btn-outline-primary" %> 
                              </li>
                              <% end %>
                          </ul>
                        </div>
                      </div>
                    </nav>
                  </div>
                </div>
            </div> 
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
