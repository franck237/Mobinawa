<!-- MAIN WRAPPER -->
<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <!-- Section of the carousel -->
        <div class="back-arrow-black hide"><a href="javascript:void(0)"><%= image_pack_tag 'icon_arrow_left_black.png' %></a></div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="back-arrow-white"><a href="javascript:void(0)"><%= image_pack_tag 'icon_arrow_left_black.png' %></a></div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%if @company.upload_logo.attached?%>
                <%= image_tag(@company.upload_logo, class: 'd-block w-100') %>
              <%else%>
                <%= image_tag(@company.logo, class: 'd-block w-100') %>
              <%end%>
            </div>
            <div class="carousel-item">
              <%if @company.upload_logo.attached?%>
                <%= image_tag(@company.upload_logo, class: 'd-block w-100') %>
              <%else%>
                <%= image_tag(@company.logo, class: 'd-block w-100') %>
              <%end%>
            </div>
            <div class="carousel-item">
              <%if @company.upload_logo.attached?%>
                <%= image_tag(@company.upload_logo, class: 'd-block w-100') %>
              <%else%>
                <%= image_tag(@company.logo, class: 'd-block w-100') %>
              <%end%>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
