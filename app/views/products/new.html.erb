<h1>Products#new</h1>
<p>Find me in app/views/products/new.html.erb</p>

<div class="slice-lg masthead">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3" style="background-color: white; color: #424140">
      	
        <%= form_for ([@admin, @company, @product]) do |f| %>
        <h6 class="h3 mb-3 font-weight-normal text-center">Créez votre produit</h6>
        <p class="text-muted mb-0 text-center">Formulaire de création d'un produit</p><br>
        
       	<% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

        <div class="form-group">
            <label class="form-control-label ">Photo * :</label>
            <div class="input-group input-group-transparent">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-camera"></i></span>
                </div>
                <%= f.file_field :upload_image, class: "form-control form-control-label" %>
            </div>
        </div>

        <div class="form-group">
            <label class="form-control-label ">Titre * :</label>
            <div class="input-group input-group-transparent">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                </div>
                <%= f.text_field :title, class: "form-control form-control-label", autofocus: true,  placeholder: "Nom du produit" %>
            </div>
        </div>

        <div class="form-group">
            <label class="form-control-label ">Description *:</label>
            <div class="input-group input-group-transparent">
                <div class="input-group-prepend">
                		<span class="input-group-text"><i class="far fa-building"></i></span>
                </div>
                <%= f.text_area :description, class: "form-control form-control-label", autofocus: true,  placeholder: "Description du produit..." %>
            </div>
        </div>

              <div class="form-group">
                <label class="form-control-label ">Quantité * :</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fa-comment-dots"></i></span>
                      </div>
                      <%= f.select :quantity, options_for_select(1..99), { prompt: "Illimité" } %>
                   </div>
              </div>

              <div class="form-group">
                <label class="form-control-label ">Prix * :</label>
                   <div class="input-group input-group-transparent">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fa-comment-dots"></i></span>
                      </div>
                      <%= f.number_field :price %>
                   </div>
              </div>

              

              <p class="text-center"><---------- Renseignement non obligatoire ----------></p>

              <div class="form-group">
			            <label class="form-control-label ">Photos supplémentaires :</label>
			            <div class="input-group input-group-transparent">
			                <div class="input-group-prepend">
			                    <span class="input-group-text"><i class="fas fa-camera"></i></span>
			                </div>
			                <%= f.file_field :photo_products, multiple: true, class: "form-control form-control-label" %>
			            </div>
			        </div>

              <div class="form-group">
              <div class="actions mt-5">
                  <%= f.submit "Créer mon Produit", class: "btn btn-lg btn-primary btn-block"  %>
              </div>
              </div>
          <% end -%>
				</div>
      </div>
    </div>
  </div>
