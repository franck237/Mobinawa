<!-- MAIN WRAPPER -->
<div class="body-wrap shop-default shop-minimalist">
    <div id="st-container" class="st-container">
        <div class="st-pusher">
            <div class="st-content">
                <div class="st-content-inner">

                    	<section class="slice bg-minimalist">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="swiper-js-container">
                                        <div class="swiper-container" data-swiper-products="1" data-swiper-space-between="0">
                                            <div class="swiper-wrapper pb-5">
                                                <div class="swiper-slide">
                                                		<% if @product.upload_image.attached? %>
                                                			<% if @product.upload_image.variable? %>
                                                  			<%= link_to image_tag(@product.upload_image.variant(resize: "300x300"), class: "rounded mx-auto d-block"), @product.upload_image %>
                                                  		<% elsif @product.upload_image.previewable? %>
                                                  			<%= link_to image_tag(@product.upload_image.variant(resize: "300x300"), class: "rounded mx-auto d-block"), @product.upload_image %>
                                                  		<% elsif @product.upload_image.image? %>
                                                  			<%= link_to image_tag(@product.upload_image, width: 300, class: "rounded mx-auto d-block"), @product.upload_image %>
                                                  		<% else %>
                                                  			<%= image_tag @product.upload_image, :class => "rounded mx-auto d-block" %>
																											<%end%>

                                                    <%else%>
                                                    	<% if @product.image_product.acts_like_string? %>
                                                    		<%= link_to image_tag(@product.image_product, class: "rounded mx-auto d-block"), @product.image_product %>
                                                    	<% else %>
											                                  <% if @product.image_product.variable? %>
	                                                  			<%= link_to image_tag(@product.image_product.variant(resize: "300x300"), class: "rounded mx-auto d-block"), @product.image_product %>
	                                                  		<% elsif @product.image_product.previewable? %> %>
	                                                  			<%= link_to image_tag(@product.image_product.preview(resize: "300x300"), class: "rounded mx-auto d-block"), @product.image_product %>
	                                                  		<% elsif @product.image_product.image?%>	
	                                                  			<%= link_to image_tag(@product.image_product, width: 300, class: "rounded mx-auto d-block"), @product.image_product %>
	                                                  		<% else %>
	                                                  			<%= link_to image_tag(@product.image_product, class: "rounded mx-auto d-block"), @product.image_product %>
	                                                  		<%end%>
																											<%end%>
										                                <%end%>
										                                <br>
										                                <!-- https://gorails.com/episodes/file-uploading-with-activestorage-rails-5-2?autoplay=1 explique egalement comment faire downloader a ses utilisateurs un fichier upload sur active storage-->
										                                <% @product.photo_products.each do |photo| %>
											                                <% if photo.variable? %>
											                                	<%= link_to image_tag(photo.variant(resize: "300x300"), class: "rounded mx-auto d-block"), photo %>
											                                	<br>
											                                <% elsif photo.previewable? %> 
											                                	<%= link_to image_tag(photo.preview(resize: "300x300"), class: "rounded mx-auto d-block"), photo %>
											                                <% else photo.image? %>
											                                	<%= link_to image_tag(photo, width: 300, class: "rounded mx-auto d-block"), photo %>
											                                <%end%>	
										                                <%end%>                                   
                                                </div>
                                            </div>
                                            <div class="swiper-pagination"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-5 ml-lg-auto">
                                    <div class="product-description-wrapper">
                                        <!-- Product title -->
                                        <h2 class="heading heading-4 strong-600 text-capitalize">
                                            <%= @product.title %>
                                        </h2>
                                        <span class="heading heading-light heading-5 strong-600 mt-3">
                                            <%= @product.price %> â‚¬
                                        </span>
                                        <!-- Product description -->
                                        <div class="product-short-text">
                                            <p>
                                                <%= @product.description %>
                                            </p>

                                        <!-- Social Links -->
                                            <ul class="inline-links inline-links--style-1 mt-4">
                                                <li>
                                                    <a href="#">Twitter</a>
                                                </li>
                                                <li>
                                                    <a href="#">Facebook</a>
                                                </li>
                                                <li>
                                                    <a href="#">Instagram</a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-8">
                                                <div class="form-default">
                                                    <div class="row mt-2">
                                                        <div class="col-md-6">
                                                            <span>Quantity to order : (fast delivering)</span>
                                                    
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <input type="text" class="form-control form-control-lg text-center" value="1">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row mt-2">
                                                        <div class="col-12">
                                                            <!-- Add to cart button -->
                                                            <button type="button" class="btn btn-lg btn-block btn-gray-dark btn-icon-left">
                                                                <i class="icon ion-bag"></i> Add to cart
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                   </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div><!-- END: st-content-inner -->
        </div><!-- END: st-pusher -->
    </div><!-- END: st-container -->
</div><!-- END: body-wrap -->